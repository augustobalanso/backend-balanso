doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi' crossorigin='anonymous')
    body
        #formContainer.container.container-md
            h3 Formulario de carga
            br
            form(action="/productos", method="post")
                label(for="title") Nombre de Producto:
                br
                input.form-control(type="text", name="title")
                br
                label(for="price") Precio:
                br
                input.form-control(type="number", name="price")
                br
                label(for="thumbnail") URL imagen:
                br
                input.form-control(type="text", name="thumbnail")
                br
                input#buttonSubmitProd(type="submit", onclick="sendProduct(this)" value="Enviar")
            br
            table#productsPlaceholder.table
                tr 
                    th(scope="col") titulo
                    th(scope="col") precio
                    th(scope="col") imagen 
            br 
        div#chatForm.container.container-md
            h3 Chat hermano de Rupert
            input#submit-username.form-control(required='' type='text' name='username' placeholder='Username')
            br
            input#submit-message.form-control(required='' type='text' name='message' placeholder='Mensaje')
            br
            button#buttonSubmitChat.btn.btn-success.btn-block(onclick='sendMessage()') Enviar
            br
            br
            #chatPlaceholder.chatPlaceholderCss
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
        script(src="/socket.io/socket.io.js") 
        script(src="/main.js")